  "scripts": {
    "copy-files": "copyfiles -u 1 src/views/** build",
    "build": "tsc && tsc-alias",
    "postbuild": "npm run copy-files",
    "start": "pm2-runtime start build/index.js --name backend-app",
    "dev": "nodemon src/index.ts",
    "format:check": "prettier --check ./src",
    "format:write": "prettier --write ./src",
    "lint:check": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "test": "jest -c jest.config.json --passWithNoTests",
    "typeorm": "npx ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js",
    "typeorm:run": "npm run typeorm -- migration:run -d src/configs/db.config.ts",
    "typeorm:revert": "npm run typeorm -- migration:revert -d src/configs/db.config.ts",
    "typeorm:generate": "npm run typeorm -- -d src/configs/db.config.ts migration:generate"
