{
  "coverageDirectory": "./coverage",
  "testMatch": ["<rootDir>/src/__tests__/**/*.test.ts"],  
  "resetMocks": true,
  "clearMocks": true,
  "collectCoverage": true,
  "coverageProvider": "v8",
  "coverageReporters": ["clover"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testEnvironment": "node"
}
